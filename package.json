{
  "name": "chiateam-bot",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "chiateam",
    "chiateam-dev"
  ],
  "scripts": {
    "dev": "yarn workspace chiateam-dev dev",
    "start": "yarn workspace chiateam dev",
    "start:dev": "NODE_ENV=development yarn workspace chiateam dev",
    "start:production": "NODE_ENV=production yarn workspace chiateam dev",
    "init-db:dev": "yarn workspace chiateam-dev init-db",
    "init-db:production": "yarn workspace chiateam init-db",
    "drop-db:dev": "yarn workspace chiateam-dev drop-db",
    "drop-db:production": "yarn workspace chiateam drop-db"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "node-telegram-bot-api": "^0.65.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  }
}